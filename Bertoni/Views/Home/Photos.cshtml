@model List<BertoniLibrary.Models.Photo>
@{
    ViewData["Title"] = "Photos";
}

<div class="text-center">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Album</th>
                <th scope="col">Title</th>
                <th scope="col">Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var photo in Model) {
                <tr>
                    <td>@photo.AlbumId</td>
                    <td>@photo.Title</td>
                    <td>
                        <button class="btn btn-outline-info Handlercomment" photo-id="@photo.Id">Comments</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="comments">
        <h3>Comments:</h3>
        
        <div id="comments-section" class="mt-4">
            <span>No Comment</span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/comment.js"></script>
}